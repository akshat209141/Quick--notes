{
  "manifest_version": 3,
  "name": "Quicky Notes",
  "version": "1.0.0",

  "description": "Extension for making quick notes and exporting them as pdf",
  "icons": {
    "16":"./images/icon.png",
    "48":"./images/icon.png",
    "126":"./images/icon.png"
  },

  "background":{
    "service_worker":"background.js"
  },

  "action": {
    "default_icon": {
      "16": "./images/icon.png",
      "24": "./images/icon.png",
      "32": "./images/icon.png"
    },

    "default_popup":"index.html"
  },

  "permissions":[
    "storage",
    "contextMenus",
    "notifications"
  ]
}